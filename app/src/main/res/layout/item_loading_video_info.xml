<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/uploadingVideoImageView"
        android:layout_width="81dp"
        android:layout_height="83dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/uploadingvideoimage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_upload_black_24dp" />

    <TextView
        android:id="@+id/uploadingVideoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Video_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/uploadingVideoImageView"
        app:layout_constraintTop_toTopOf="@+id/uploadingVideoImageView" />

    <com.example.vkvideoloader.ui.ProgressBar
        android:id="@+id/uploadingVideoProgressBar"
        android:layout_width="162dp"
        android:layout_height="19dp"
        app:layout_constraintBottom_toBottomOf="@+id/uploadingVideoImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/uploadingVideoImageView"
        app:layout_constraintTop_toBottomOf="@+id/uploadingVideoTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>